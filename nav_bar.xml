<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavBar">
        <TextView
            android:id="@+id/backNav"
            android:text="Back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/camNav"
            android:background="@color/pink"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:gravity="center"/>
        <TextView
            android:id="@+id/camNav"
            android:text="Camera"
            android:background="@color/pink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/backNav"
            app:layout_constraintRight_toLeftOf="@id/photosNav"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:gravity="center"/>
        <TextView
            android:id="@+id/photosNav"
            android:text="Draw"
            android:background="@color/pink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/camNav"
            app:layout_constraintRight_toLeftOf="@id/profileNav"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:gravity="center"/>
        <TextView
            android:id="@+id/profileNav"
            android:text="Profile"
            android:background="@color/pink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/photosNav"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>